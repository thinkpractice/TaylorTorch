{
    "name": "TaylorTorch Swift Container",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "swiftlang.swift-vscode",
                "vadimcn.vscode-lldb"
            ],
            "settings": {
                "lldb.adapterType": "bundled",
                "lldb.executable": "/usr/bin/lldb",
                "terminal.integrated.shell.linux": "/bin/bash"
            }
        }
    }
}